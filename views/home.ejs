<body>
    <%- include('navbar'); %>
        <h1 style="font-size: 5vw;" class="text-success text-center mb-2">STOCKS</h1>
        <div class="row">
            <div class="container">
                <div class="col-sm-3 ">
                    <div class="search-box">
                        <div class="input-group">
                            <input type="text" id="search" class="form-control" placeholder="Search by Name">
                            <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-12">
                    <div id="example" class="table-responsive table-striped table-bordered table-sm">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th scope="col">ITEMS</th>
                                    <th scope="col">QUANITY</th>
                                    <th scope="col">IN/KG</th>
                                    <th scope="col">TOTAL</th>
                                    <th scope="col"></th>

                                </tr>
                            </thead>
                            <tbody>
                                <%Itemlist.forEach((x)=>{%>
                                    <tr>


                                        <td>
                                            <%=x.itemname%>
                                        </td>
                                        <td>
                                            <%=x.quant%>
                                        </td>
                                        <td>
                                            <%=x.grams%>
                                        </td>

                                        <td>
                                            <%=x.Total%>
                                        </td>
                                        <td class="text-center"><a href="/sellitem<%=x.itemname%>"
                                                class="btn btn-outline-success my-2 my-sm-0 ">
                                                Sell
                                            </a></td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
</body>
