<body>
  <%- include('navbar'); %>
    <h1 style="font-size: 5vw;" class="text-success text-center mb-2">Purchase</h1>
    <div class="container">
      <form action="/purchase" method="post">
        <div class="row">
          <div class="col-25">
            <label for="fname">Client Name</label>
          </div>
          <div class="col-75">
            <input type="text" id="fname" name="client" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="fname">Item Name</label>
          </div>
          <div class="col-75">
            <input type="text" id="fname" name="itemname" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="itemname">item Quantity</label>
          </div>
          <div class="col-75">
            <input type="text" id="Quantity" name="Quantity" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="country">wieght</label>
          </div>
          <div class="col-75">
            <select id="country" name="grams">
              <option value="grams">InGm</option>
              <option value="tons">InTn</option>
              <option value="kilo">InKg</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="subject">Balance</label>
          </div>
          <div class="col-75">
            <input type="text" id="Balance" name="Balance" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="fname">Paid</label>
          </div>
          <div class="col-75">
            <input type="text" id="fname" name="Paid" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label for="fname">Total</label>
          </div>
          <div class="col-75">
            <input type="text" id="fname" name="Total" placeholder="" required>
          </div>
        </div>
        <div class="row">
          <input type="submit" value="BUY">
        </div>
      </form>
    </div>


</body>

</html>